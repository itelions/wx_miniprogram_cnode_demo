/* components/dialog/dialog.wxss */
.dialog-main{
  position: fixed;
  left: 0;
  top: 0;
  z-index: 5;
  background: rgba(0,0,0,0.5);
  width: 100%;
  height: 100%;
}

.dialog-main.hidden{
  display:none;
}

.dialog-pannel{
  position: absolute;
  width: 90%;
  height: 75%;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  background: #fff;
}

.dialog-title{
  position: absolute;
  top:0;
  width: 100%;
  left: 0;
  background: #eee;
  height: 90rpx;
  font-size: 40rpx;
  color: #80bd01;
  line-height: 90rpx;
  text-align: center;
}

.dialog-content{
  position: absolute;
  top: 90rpx;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
}