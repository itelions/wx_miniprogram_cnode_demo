/* pages/detail/detail.wxss */
page{
  background: #e1e1e1;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}
.pannel{
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx; 
}
.pannel>.title{
  background: #eee;
  font-size: 40rpx;
  width: 100%;
  color: #888;
  text-indent: 40rpx;
  line-height: 80rpx;
}
.content{
  box-sizing: border-box;
  font-size: 36rpx;
}
.content>view,.main .content{
  padding: 20rpx 20rpx;
}
.topic-title{
  font-size: 40rpx;
  color: #80bd01;
  font-weight: bold;
  border-bottom:1px solid #eee;
  padding-bottom: 20rpx;
}
.info .auth{
  overflow: hidden;
  border-bottom:1px solid #eee;
}
.info .auth>view{
  float: left;
}
.info .auth .auth_img{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #eee;
  margin-right: 30rpx;
}
.info .auth .auth_img image{
  width: 100%;
  height: 100%;
}
.info .auth .auth_name{
  color: #999;
  font-size: 40rpx;
  line-height: 120rpx;
}
.info .other{
  font-size: 32rpx;
  line-height: 42rpx;
}

.btn-collect{
  margin-top:20rpx;
  background:darkorange;
  color:#fff;
  border:0;
}

.btn-collected{
  margin-top:20rpx;
  background: #80bd01;
  color:#fff;
  border:0;
}

.replies>.title{
  position: relative;
}
.replies .reply-count{
  position:absolute;
  right:30rpx;
  top:0;
}
.replies-item{
  border-bottom: 1px solid #eee;
}
.reply-auth{
  overflow: hidden;
  line-height: 100rpx;
  margin-bottom: 20rpx;
}
.reply-auth view{
  float: left;
}
.reply-auth .create-at{
  float: right;
  font-size: 30rpx;
  color: #333;
}
.reply-auth-img{
  border-radius: 50%;
  overflow: hidden;
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  background: #eee;
}
.reply-auth image{
  width: 100%;
  height: 100%;
}
.markdown-text .mark{
 width: 100%;
}
.reply-auth{
  color: #888;
}
.replies-item .up{
  margin-top: 20rpx;
  overflow: hidden;
}
.replies-item .up view{
  float: right;
}
.replies-item .up text{
  margin-left: 20rpx;
}
.replies-item .up .toogle-up{
  color: #80bd01;
}
.replies-item .up .toogle-up .uped{
  color: red;
}
.replies-item .up .size{
  color: #999;
}
.reply-input{
  min-height: 300rpx;
  box-sizing: border-box;
  padding: 20rpx;
}
.reply-button{
  margin: 20rpx;
}