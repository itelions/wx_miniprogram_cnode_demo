/* pages/user-detail/user-detail.wxss */
page{
  box-sizing: border-box;
  padding: 20rpx;
  background: #e1e1e1;
}

.pannel{
  border-radius: 10rpx;
  overflow: hidden;
  background: #fff;
  width: 100%;
  margin: 20rpx 0;
}

.pannel .pannel-title{
  background: #eee;
  font-size: 40rpx;
  width: 100%;
  color: #888;
  text-indent: 40rpx;
  line-height: 80rpx;
}
.pannel .pannel-content{
  box-sizing: border-box;
  font-size: 36rpx;
}

.user-info .pannel-content{ 
  text-indent: 40rpx;
}
.user-info .pannel-content>view{
  margin-bottom: 40rpx;
}

.user-avatar{
  margin: 40rpx;
  text-indent: 0;
  border-radius: 10rpx;
  overflow: hidden;
  width: 240rpx;
  height: 240rpx;
  background: #eee;
}
.user-avatar image{
  width: 100%;
  height: 100%;
}
.pannel .item{
  padding: 20rpx;
  border-bottom:1px solid #eee;
  line-height: 60rpx;
}
.pannel .item:last-of-type{
  border:0;
}
.last-reply-at{
  color: #999;
  font-size: 30rpx;
  text-indent: 20rpx;
}
.last-reply-at .time{
  color: red;
}